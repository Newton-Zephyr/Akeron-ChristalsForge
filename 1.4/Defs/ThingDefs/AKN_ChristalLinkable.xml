<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=============================== Tartarite Power Hammer ===============================-->
  <ThingDef ParentName="BuildingBase">
    <defName>AKN_TartaritePowerHammer</defName>
    <label>tartarite power hammer</label>
    <description>A power hammer fit for working with reinforced tartarite. 

An ingeniously efficient design allows it to function off of the excess heat generated by the kilns from the smithies, thus not requiring an independent power source.</description>
	<drawerType>MapMeshAndRealTime</drawerType>    
	<graphicData>
      <texPath>Things/Christal/Buildings/AKN_TartaritePowerHammer</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
      <color>(255,251,254)</color>	  
      <shadowData>
        <volume>(0.8, 0.35, 0.59)</volume>
        <offset>(0, 0, 0.08)</offset>
      </shadowData>	  
      <damageData>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
	<rotatable>true</rotatable>	
    <costList>
      <Steel>70</Steel>
	  <WoodLog>30</WoodLog>
	  <AKN_Tartarite>15</AKN_Tartarite>
	  <AKN_ReinforcedTartariteRing>2</AKN_ReinforcedTartariteRing>	  
    </costList>	
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>AKN_TartariteAssistance</li>
      <li>AKN_TartariteReinforcement</li>	  
    </researchPrerequisites>	
    <constructEffect>ConstructWood</constructEffect>	
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>	
    <useHitPoints>True</useHitPoints>	
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>4500</WorkToBuild>
      <Mass>20</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,1)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>42</pathCost>	
    <surfaceType>Item</surfaceType>	
    <canOverlapZones>false</canOverlapZones>		
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
    </building>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <WorkTableWorkSpeedFactor>0.15</WorkTableWorkSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>5</maxDistance>		
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>	
  </ThingDef>
</Defs>